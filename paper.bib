	journal = {Proceedings of the Royal Society B: Biological Sciences},
	author = {Chapman, Colin A. and Bicca-Marques, Júlio César and Calvignac-Spencer, Sébastien and Fan, Pengfei and Fashing, Peter J. and Gogarten, Jan and Guo, Songtao and Hemingway, Claire A. and Leendertz, Fabian and Li, Baoguo and Matsuda, Ikki and Hou, Rong and Serio-Silva, Juan Carlos and Stenseth, Nils Chr},
	year = {2019},
	note = {Publisher: Royal Society Publishing},
	keywords = {H-index, Academic ethics, Academic evaluation, Academic standards, Impact factors, Publishing practices},
	pages = {20192047},
}

@article{scheffers_global_2019,
