	number = {1},
	urldate = {2020-10-28},
	journal = {Journal of Applied Ecology},
	author = {Allen, L. R. and Sparkes, E. C.},
	year = {2001},
	note = {\_eprint: https://besjournals.onlinelibrary.wiley.com/doi/pdf/10.1046/j.1365-2664.2001.00569.x},
	keywords = {bounties, buffers, fencing, poisons, predator management, regression tree analysis},
	pages = {76--87},
	file = {Full Text PDF:C\:\\Users\\iamje\\Zotero\\storage\\UA8YC4F2\\Allen and Sparkes - 2001 - The effect of dingo control on sheep and beef catt.pdf:application/pdf;Snapshot:C\:\\Users\\iamje\\Zotero\\storage\\EW2CSAWT\\j.1365-2664.2001.00569.html:text/html},
